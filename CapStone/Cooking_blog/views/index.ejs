<div class="row flex-lg-row-reverse align-items-center g-5 py-4 mb-4">
    <div class="clo-12 col-lg-6">
        <img src="/img/Blog_image2.jpg" width="610" height="510" d-block mx-lg-auto img-fluid" loading="lazy"
            alt="Cooking Blog">
    </div>

    <div class="col-12 col-lg-6">
        <h1 class="display-5 fw-bold mb-3">Huge seelction of delicios recipe ideas</h1>
        <p class="lead">Explore our huge selection of delicious recipe ideas including, esy desserts, delicious vegan
            and vegetarian dinner ideas, gorgeous pasta
            recipes, quick bakes, family-friendly meals and glluten-free recipes.</p>
        <div class="d-grid gap-2 d-md-flex justify-content-md-start">
            <a href="/explore-latest" class="btn btn-primary btn-dark btn-lg px-4 me-md-2">Explore latest</a>
            <a href="/random-recipe" class="btn btn-outline-secondary btn-lg px-4 me-md-2">Show Random</a>
        </div>

    </div>

    <!--catagories Start-->

    <div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-3 py-4">
        <!-- if the categories is not equal empty,then work for it -->
        <% if(categories !='' ){ %>
            <% categories.forEach(function(catagory, index){ %>

                <a href="/categories/<%-catagory.name %>" class="col text-center category_link">
                    <div class="category__img shadow">
                        <img src="img/<%- catagory.image %>" width="200" height="200" alt="<%- catagory.name %>"
                            loading="lazy">
                    </div>
                    <div class="pt-1"><%- catagory.name %></div>
                </a>
                <% }) %>
                    <% } %>


                        <a href="/categories" class="col text-center category_link">
                            <div class="category__img shadow">
                                <img src="img/American_Stacks.jpg" width="200" height="200" alt="view All categories"
                                    loading="lazy">
                            </div>
                            <div class="pt-1">View All</div>
                        </a>

    </div>

    <!--catagories End-->

    <!--Latest Start-->
    <section class="pb-4 pt-4">
        <div class="d-flex mb-2 align-items-center">
            <h2>Latest Recipes</h2>
            <a href="/explore-latest" class="ms-auto">View More</a>
        </div>


        <div class="row row-cols-2 row-cols-lg-5 g2 g-lg-3">

            <% if(food != '') { %>
              <% food.latest.forEach(function(recipe, index){ %>

            <a href="/recipe/<%= recipe._id %>" class="col text-center category__ling">
                <div class="category__img category__img--large shadow">
                    <img src="/uploads/<%= recipe.image %>"  alt="<%= recipe.name %>" loading="lazy">
                </div>
                <div class="pt-1"><%= recipe.name %></div>
            </a>
            <% }) %>
            <% } else { %>
                <p>No items found</p>
           <% } %>
        </div>
    </section>
    <!--Latest End-->

     <!--Thai Start-->
     <section class="pb-4 pt-4">
        <div class="d-flex mb-2 align-items-center">
            <h2>Thai Recipes</h2>
            <a href="/categories/Thai" class="ms-auto">View More</a>
        </div>


        <div class="row row-cols-2 row-cols-lg-5 g2 g-lg-3">

            <% if(typeof food.thai !== 'undefined' && food.thai.lenght > 0) { %>
              <% food.thai.forEach(function(recipe, index){ %>

            <a href="/recipe/<%= recipe._id %>" class="col text-center category__ling">
