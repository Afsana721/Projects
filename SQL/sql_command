
-- select all rows for emplpyees in department 110
Select * From employees 
WHERE department_id =110;

--Select all rows for employees with last name "King"
SELECT * from employees
WHERE last_name = 'King';

--Select full name for all employees whose last name starts with "k"
SELECT CONCAT(first_name, ' ', last_name) AS Full_Name from employees
WHERE last_name LIKE 'K%';

/* Subqueries*/
-- find all the departments which are located in the United Kingdom
SELECT department_name from hr.departments
INNER JOIN locations ON hr.departments.location_id = hr.locations.location_id
WHERE hr.locations.country_id= 'UK'

SELECT * from employees;
Select * from departments;

SELECT first d.department_name AS DEPT_NAME, e.first_name AS F_Name,
e.job_id AS JOB_ID From employees e
FULL JOIN departments d 
ON e.department_id = d.department_id;


SELECT d.department_id, d.department_name, l.country_id
FROM departments d
FULL JOIN locations l ON d.location_id = l.location_id;

--check sales & products table columns
select * from  products;
select * from sales;

Select s.saledate AS SALEDATE, s.amount AS SalesAmount From sales s
FULL JOIN products p
ON s.productid = p.productid;

--Provide players data in the form of : first, last, height, weight, team


--Find the employees that make greater than the avarage salary in the company


--Find full name of all employees who work in Seattle, Washington:
-- need Full name column using concat to create full name column then ask employees table
SELECT CONCAT(e.first_name, ' ', e.last_name) AS full_name
FROM employees e
WHERE e.department_id IN (
    SELECT d.department_id
    FROM departments d
    WHERE d.location_id IN (
        SELECT l.location_id
        FROM locations l
        WHERE l.city = 'Seattle' AND l.state_province = 'Washington'
    )
);

--Left join
SELECT e.first_name, e.last_name, d.department_name
FROM hr.employees e
LEFT JOIN
hr.departments d 
ON e.department_id = d.department_id;

-- find data from players and team tables
select * from hr.players;
select * from teams;

SELECT p.fname AS first, p.lname AS last, p.height, p.weight, t.name AS team 
from hr.players p
LEFT JOIN hr.teams t
ON p.team_id = t.id;


SELECT p.fname AS first, p.lname AS last, p.height, p.weight, t.name AS team 
from hr.players p
FULL JOIN hr.teams t
ON p.team_id = t.id
WHERE name IS NOT NULL;


SELECT * from hr.employees;

