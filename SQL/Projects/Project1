
SELECT SUBSTRING(last_name, 2,3), first_name, salary, job_id
FROM hr.employees
Where length(last_name) > 3;

SELECT last_name,first_name, salary, job_id
FROM hr.employees;

-- Task 3:
-- Please find all employees that have a salary greater than 8000, and those hired after 1996 
-- (use implicit conversion of a date as a string to the DATE type).
-- Create a separate query to find the lowest salary in the company (look for a SQL math function from references or 
-- Google search which allows you find the minimum in a set or a column).
-- In the first query you wrote above, please also report the employee's total compensation (salary + commission, 
-- if any) as a percentage of the minimum salary in the company from the #2 above.

SELECT salary, hire_date, first_name, last_name from hr.employees
WHERE salary > 8000 AND hire_date > '1996-01-01';

SELECT
    *,
    EXTRACT(YEAR FROM hire_date) - 1996 AS years_with_company
FROM hr.employees
WHERE salary > 8000 AND EXTRACT(YEAR FROM hire_date) > 1996;

SELECT MIN(salary) AS min_salary FROM employees;


SELECT
    *,
    (salary + COALESCE(commission_pct * salary, 0)) AS total_compensation
FROM employees
WHERE salary > 8000 AND hire_date > '1996-01-01';

SELECT
    e.*,
    (e.salary + COALESCE(e.commission_pct * e.salary, 0)) AS total_compensation,
    ((e.salary + COALESCE(e.commission_pct * e.salary, 0)) / m.min_salary) * 100 AS compensation_percentage_of_min_salary
FROM employees e
CROSS JOIN (SELECT MIN(salary) AS min_salary FROM employees) m
WHERE e.salary > 8000 AND e.hire_date > '1996-01-01';







