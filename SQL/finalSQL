SELECT
    t.id AS team_id,
    t.name AS name,
    t.city,
    t.state,
    p.fname || ' ' || p.lname AS fullname,
    p.weight,
    CASE
        WHEN p.weight > 200 THEN 'Heavy'
        ELSE 'Medium'
    END AS "Weight Category"
FROM
    teams t
LEFT JOIN
    players p ON t.id = p.team_id
ORDER BY
    t.id ASC,
    p.weight ASC;