<body>
<!--ejs coding-->
<!--add nav.ejs using include() method from EJS, inside pass the nav.ejs relative path--> 
   <%- include('./partials/nav.ejs') %>

    <div class="blogs content">
        <h2>All Blogs</h2>
<!--Add blogs dynamiclly here. but first check if the blogs is available, not 0 by if condition-->
        <% if(blogs.length > 0) { %>
            <% blogs.forEach( blog => { %>
                <a class="single" href="/blogs/<%= blog._id %>">
                <h3 class="title"> <%=blog.title %> </h3>
                <p class="snippet"> <%=blog.snippet %> </p>
                </a>
            <% }) %>
        <% } else { %>
            <p>There are no blogs to display</p>
        <% } %>
    </div>
    
    <%- include('./partials/footer.ejs') %>

</body>
</html>